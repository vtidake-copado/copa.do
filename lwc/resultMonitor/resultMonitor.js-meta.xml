    <targets>
        <target>lightning__RecordPage</target>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="fieldApiName" type="String" label="Field API Name" />
            <property name="noJobTitle" type="String" label="Title" />
            <property name="noJobMessage" type="String" label="Message" />
        </targetConfig>
        <targetConfig targets="lightning__FlowScreen">
            <property label="Job Execution Id" name="recordId" type="String" />
