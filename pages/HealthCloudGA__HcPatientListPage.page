    <style>
    @media only screen and (max-width: 400px) {
        html {
            background-color: #16315C;
        }
        html body.sfdcBody{
          background-color: #16315C;
        }
    }
    </style>

    <html>
      <div id="content" />
    </html>

    <script>
    var userDateFormat = UserContext.dateFormat;
    var userDateTimeFormat = UserContext.dateTimeFormat;
