<apex:page standardController="Selenium_Test_Run__c" recordSetVar="runs" extensions="MassAddRunsToGroup" title="{!$Label.SELECT_GROUP_TO_ADD_RUNS}" lightningStylesheets="true">
    <head>
        <c:GAnalytics />
        <apex:stylesheet value="{!URLFOR($Resource.CopadoLightningCSS)}" />
    </head>
    <body>
        <apex:form id="theForm" styleClass="copado-lightning-container" html-novalidate="true">
            <apex:pageMessages />
            <apex:sectionHeader title="{!$ObjectType.Selenium_Test_Group__c.Label}" subtitle="{!$Label.ADD_SUITES_TO_A_GROUP}" description="{!$Label.SELECT_GROUP_TO_ADD_RUNS}"/>
            <apex:pageBlock mode="edit">
                <apex:pageblockButtons >
                    <apex:commandButton value="{!$Label.site.cancel}" action="{!cancel}" />
                    <apex:commandButton value="{!$Label.site.save}" styleClass="btnImportant" action="{!addTestRunsToGroup}" />
                </apex:pageblockButtons>
                <apex:pageBlockSection columns="1">
                    <apex:inputField value="{!dummy.Selenium_Test_Group__c}" required="true"/>
                </apex:pageBlockSection>
            </apex:pageBlock>
        </apex:form>
        <c:CheckFeaturesComponent />
        <script>
            ga('send', 'pageview', {
              'page': '/MassAddRunsToGroup',
              'title': 'Mass Add Runs to Group'
            });
        </script>
    </body>
</apex:page>